<Page x:Class="PointOfSale.FlavorSelection"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PointOfSale"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="FlavorSelection">


    <WrapPanel>
        <WrapPanel.Resources>
            <Style TargetType="Button">
                <Setter Property="Width" Value="100"/>
                <Setter Property="Height" Value="100"/>
            </Style>
        </WrapPanel.Resources>
        <Button Tag="Cherry" Click="CherryClick">Cherry</Button>
        <Button Tag ="Chocolate" Click="ChocolateClick">Chocolate</Button>
        <Button Click="ColaClick">Cola</Button>
        <Button Click="LimeClick">Lime</Button>
        <Button Click="OrangeClick">Orange</Button>
        <Button Click="RootBeerClick">Root Beer</Button>
        <Button Click="VanillaClick">Vanilla</Button>

    </WrapPanel>

</Page>
